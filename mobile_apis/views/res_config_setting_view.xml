<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="after">
                <div id="online_requests_settings">
                    <h2>Online Requests Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Security Token for Online Requests
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="sec_token_for_online_requests" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="sec_token_for_online_requests" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       </field>
   </record>

</odoo>
